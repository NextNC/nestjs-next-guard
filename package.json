{
  "name": "@nextnm/nestjs-next-guard",
  "version": "2.2.2",
  "description": "NestJS RBAC Guard that also checks models ownership",
  "author": "Nuno Carvalh√£o <nuno.carvalhao@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "nextnm",
    "guard",
    "ownership",
    "RBAC",
    "Mongoose"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NextNC/nestjs-next-guard"
  },
  "bugs": "https://github.com/NextNC/nestjs-next-guard",
  "peerDependencies": {
    "@nestjs/common": "^10.2.1",
    "rxjs": "^7.8.1",
    "reflect-metadata": "^0.1.13",
    "mongoose": "^7.4.5"
  },
  "dependencies": {
    "@nestjs/mongoose": "^10.0.1",
    "mongoose": "^7.4.5",
    "redis": "^4.6.8",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@nestjs/common": "^10.2.1",
    "@nestjs/core": "^10.2.1",
    "@types/redis": "^4.0.11",
    "@nestjs/platform-express": "^10.2.1",
    "@nestjs/testing": "10.2.1",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.4",
    "@types/node": "^20.5.6",
    "@types/supertest": "^2.0.12",
    "jest": "29.6.4",
    "prettier": "2.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsc-watch": "4.2.3",
    "tsconfig-paths": "4.2.0",
    "tslint": "6.1.1",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
